<?xml version='1.0' encoding='UTF-8'?>
<!-- See src/resources/configuration/ReadMe.txt for how the configuration assembly works -->
<config default-supplement="default">
    <extension-module>org.infinispan.server.datasources</extension-module>
    <subsystem xmlns="urn:infinispan:server:datasources:9.2">
        <?DATASOURCES?>
    </subsystem>
    <supplement name="default">
        <replacement placeholder="@@default-cache-container@@" attributeValue="local"/>
        <replacement placeholder="DATASOURCES">
            <datasources>
                <datasource jndi-name="java:jboss/datasources/ExampleDS" pool-name="ExampleDS">
                    <connection-url>jdbc:h2:mem:test;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE</connection-url>
                    <driver>h2</driver>
                    <security>
                        <user-name>sa</user-name>
                        <password>sa</password>
                    </security>
                </datasource>
                <drivers>
                    <driver name="h2" module="com.h2database.h2">
                        <datasource-class>org.h2.jdbcx.JdbcDataSource</datasource-class>
                    </driver>
                </drivers>
            </datasources>
        </replacement>
    </supplement>
</config>
