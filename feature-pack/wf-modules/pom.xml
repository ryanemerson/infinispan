<?xml version='1.0' encoding='UTF-8'?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.infinispan</groupId>
        <artifactId>infinispan-feature-pack</artifactId>
        <version>9.3.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>infinispan-feature-pack-wf-modules</artifactId>
    <name>Infinispan Wildfly Feature Pack - Widlfly Modules</name>
    <packaging>pom</packaging>

    <dependencies>
        <!-- Feature pack dependencies -->
        <dependency>
            <groupId>org.infinispan</groupId>
            <artifactId>infinispan-feature-pack-server</artifactId>
            <!--TODO add to bom-->
            <version>${project.version}</version>
            <type>zip</type>
        </dependency>

        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-search-jbossmodules-engine</artifactId>
            <version>${version.hibernate.search}</version>
            <type>zip</type>
        </dependency>

        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-search-jbossmodules-elasticsearch</artifactId>
            <version>${version.hibernate.search}</version>
            <type>zip</type>
        </dependency>

        <dependency>
            <groupId>org.hibernate.lucene-jbossmodules</groupId>
            <artifactId>lucene-jbossmodules</artifactId>
            <version>${version.lucene.featurepack}</version>
            <type>zip</type>
        </dependency>

        <dependency>
            <groupId>org.hibernate.elasticsearch-client-jbossmodules</groupId>
            <artifactId>elasticsearch-client-jbossmodules</artifactId>
            <version>${version.elasticsearch-client.featurepack}</version>
            <type>zip</type>
        </dependency>

        <dependency>
            <groupId>org.hibernate.gson-jbossmodules</groupId>
            <artifactId>gson-jbossmodules</artifactId>
            <version>${version.gson.featurepack}</version>
            <type>zip</type>
        </dependency>

        <!-- Main module dependencies -->
        <dependency>
            <groupId>org.infinispan</groupId>
            <artifactId>infinispan-cdi-embedded</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>*</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>org.infinispan</groupId>
            <artifactId>infinispan-directory-provider</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>*</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>org.infinispan</groupId>
            <artifactId>infinispan-lucene-directory</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>*</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>org.infinispan</groupId>
            <artifactId>infinispan-jcache</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>*</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>org.infinispan</groupId>
            <artifactId>infinispan-jcache-commons</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>*</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.wildfly.build</groupId>
                <artifactId>wildfly-feature-pack-build-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <configuration>
                    <skip>false</skip>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
            </plugin>
        </plugins>
    </build>
</project>
